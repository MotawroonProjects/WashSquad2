<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="lang"
            type="String" />
        <variable
            name="level2"
            type="com.creative.share.apps.wash_squad.models.ServiceDataModel.Level2" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        >
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background='@{level2.selected?@drawable/selected_car_size_bg:@drawable/expand_bg}'
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                serviceImage="@{level2.image}"

                />
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor='@{level2.selected?@color/color_second:@color/primary_dark}'
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text='@{lang.equals("ar")?level2.ar_title:level2.en_title}'
                />
        </LinearLayout>
    </LinearLayout>
</layout>